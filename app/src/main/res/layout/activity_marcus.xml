<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Marcus">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/putih1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="172dp"
                android:layout_gravity="top"
                android:layout_marginTop="20dp"
                android:src="@drawable/rasford" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="190dp"
            android:gravity="center"
            android:layout_alignParentStart="true"
            android:background="@drawable/mu">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <Button
                    android:layout_width="340dp"
                    android:layout_height="76dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:text="3. pemain asli binaan menchester unitid ini adalah?"/>
                <Button
                    android:id="@+id/marcus1"
                    android:layout_width="290dp"
                    android:layout_height="60dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:text="marcus rashford"/>
                <Button
                    android:id="@+id/marcus2"
                    android:layout_width="290dp"
                    android:layout_height="60dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:text="nemanja matic"/>
                <Button
                    android:id="@+id/marcus3"
                    android:layout_width="290dp"
                    android:layout_height="60dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:text="ivan rakitic"/>
                <Button
                    android:id="@+id/marcus4"
                    android:layout_width="290dp"
                    android:layout_height="60dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:text="nusan tadic"/>


            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>